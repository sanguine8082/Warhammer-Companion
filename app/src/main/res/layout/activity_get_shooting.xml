<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.aaron.warhammercompanion.get_shooting">


    <EditText android:id="@+id/num_shots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/num_shots"
        android:inputType="number">
    </EditText>
    <EditText android:id="@+id/shooter_skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/num_shots"
        android:hint="@string/shooter_skill"
        android:inputType="number" >
    </EditText>
    <Button android:id="@+id/set1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/num_shots"
        android:text="Set"/>
    <Button android:id="@+id/set2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/shooter_skill"
        android:layout_below="@id/set1"
        android:text="Set"/>
    <Spinner
        android:id="@+id/reroll_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shooter_skill"
        />
    <Button android:id="@+id/fire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reroll_options"
        android:text="Fire"/>

    <TextView
        android:id="@+id/shotshit"
        android:layout_width="wrap_content"
        android:editable="false"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/primary_text_dark"
        android:layout_height="wrap_content"
        android:layout_below="@id/fire"
        android:textSize = "32sp"
        android:text="@string/empty"
        />
    <TextView
        android:id="@+id/shotvals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"
        android:layout_below="@id/shotshit"
        android:textSize = "20sp"
        android:text="@string/empty"
        />


</RelativeLayout>
